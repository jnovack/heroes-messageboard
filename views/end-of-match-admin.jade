extends layout

block head
  link(href='/stylesheets/base.css', rel='stylesheet')
  link(href='/stylesheets/divimage.css', rel='stylesheet')
  script(src='/javascripts/socket.js')
  style.
    .nav-tabs>li { background-color: #ECF0F1 }

block footer
  script(src='/javascripts/end-of-match.js')
  script(src='/javascripts/end-of-match-admin.js')

block content
  style.
    .row { margin-top: 24px;}

  div.row
    div.col-lg-12
      div.control-group
        label(for='title',class='control-label') Title
        div.controls
          input(data-group='text',type='text',id='title',name='title',placeholder='Match Summary',class='form-control')

  div.row
    div.col-md-4
      div.control-group
        label(for='team1-name',class='control-label') Team 1 Name
        div.controls
          input(data-group='text',type='text',id='team1-name',name='team1-name',placeholder='Rancho Carne Toros',class='form-control')
    div.col-md-2
      div.control-group
        label(for='team1-score',class='control-label') Team 1 Score
        div.controls
          input(data-group='value',type='text',id='team1-score',name='team1-score',placeholder='0',class='form-control',disabled,value=0)
    div.col-md-2
      div.control-group
        label(for='team2-score',class='control-label') Team 2 Score
        div.controls
          input(data-group='value',type='text',id='team1-score',name='team1-score',placeholder='0',class='form-control',disabled,value=0)
    div.col-md-4
      div.control-group
        label(for='team2-name',class='control-label') Team 2 Name
        div.controls
          input(data-group='text',type='text',id='team2-name',name='team2-name',placeholder='East Compton Clovers',class='form-control')

  div.row
    div.col-lg-12
      div.control-group
        label(for='announcement',class='control-label') Announcement
        div.controls
          input(data-group='text',type='text',id='announcement',name='announcement',placeholder='Coming Up: The finals!',class='form-control')

  div.row
    div.col-lg-12
      div(role='tabpanel')
        ul(role='tablist').nav.nav-tabs
          - for (var i = 1; i < 6; ++i) {
            li(role='presentation')
              a(href='#tab-game'+i,aria-expanded='false',role='tab',data-toggle='tab')
                span(id='label-game'+i).label.label-primary Game 
                  span= i
          - }
        div.tab-content
          - for (var i = 1; i < 6; ++i) {
            div(role='tabpanel',id='tab-game'+i).tab-pane
              div.row
                div.col-lg-12
                  span Game
                    span= i
              div.row
                div.col-lg-12
                  div.btn-toolbar
                    a(data-group='game'+i+'-pills',id='game'+i+'Reset',data-game='game'+i,data-action='reset').btn.btn-sm.btn-warning Reset
                    a(data-group='game-team-pills',id='game'+i+'-team1',data-game='game'+i,data-team='team1',data-class='info').btn.btn-sm.btn-default Team 1 Wins
                    a(data-group='game-team-pills',id='game'+i+'-team2',data-game='game'+i,data-team='team2',data-class='info').btn.btn-sm.btn-default Team 2 Wins
                    a(data-group='game-control-pills',id='game'+i+'-disable',data-game='game'+i,data-action='hide',data-class='danger',style='display: none').btn.btn-sm.btn-danger Disable
                    a(data-group='game-control-pills',id='game'+i+'-enable',data-game='game'+i,data-action='show',data-class='success').btn.btn-sm.btn-success Enable
              div.row
                div.col-md-1
                  div(id='game'+i+'-team1-hero1').divimage
                div.col-md-1
                  div(id='game'+i+'-team1-hero2').divimage
                div.col-md-1
                  div(id='game'+i+'-team1-hero3').divimage
                div.col-md-1
                  div(id='game'+i+'-team1-hero4').divimage
                div.col-md-1
                  div(id='game'+i+'-team1-hero5').divimage
                div.col-md-2
                  div(id='game'+i+'-map').center.divimage.map-mini
                div.col-md-1
                  div(id='game'+i+'-team2-hero1').divimage
                div.col-md-1
                  div(id='game'+i+'-team2-hero2').divimage
                div.col-md-1
                  div(id='game'+i+'-team2-hero3').divimage
                div.col-md-1
                  div(id='game'+i+'-team2-hero4').divimage
                div.col-md-1
                  div(id='game'+i+'-team2-hero5').divimage
              div.row
                div.col-md-12
                  +map-select('game'+i+'-map','map')
                div.col-md-6
                  +hero-select('game'+i+'-team1-hero1','team1-hero1')
                  +hero-select('game'+i+'-team1-hero2','team1-hero2')
                  +hero-select('game'+i+'-team1-hero3','team1-hero3')
                  +hero-select('game'+i+'-team1-hero4','team1-hero4')
                  +hero-select('game'+i+'-team1-hero5','team1-hero5')
                div.col-md-6
                  +hero-select('game'+i+'-team2-hero1','team2-hero1')
                  +hero-select('game'+i+'-team2-hero2','team2-hero2')
                  +hero-select('game'+i+'-team2-hero3','team2-hero3')
                  +hero-select('game'+i+'-team2-hero4','team2-hero4')
                  +hero-select('game'+i+'-team2-hero5','team2-hero5')
          - }